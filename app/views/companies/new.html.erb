<h1> Create a new company </h1>

<hr>


<%= form_for @company do |f| %>

<%= collection_select :industry, :industry_id, Industry.all, :id, :name, :prompt => 'Select Industry', :multiple => true %>

<br>

<%= f.label :name %>
<%= f.text_field :name %>

<br>

<%= f.label :description %>
<%= f.text_area :description %>

<br>

<%= f.label :price %>
<%= f.number_field :price %>

<%= f.submit 'Create' %>
<% end %>
