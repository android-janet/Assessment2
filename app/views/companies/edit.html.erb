<h1> Edit Company </h1>

<hr>


<%= form_for @company do |f| %>

  <%= f.label :industry_id, 'Industries' %>
  <%= collection_select @industry, :industry_id, Industry.all, :id, :name, :prompt => 'Select Industry', :multiple => true %>

  <br>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <br>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <br>

  <%= f.label :price %>
  <%= f.number_field :price %>

  <%= f.submit 'Update' %>
  <% end %>
